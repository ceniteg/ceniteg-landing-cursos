---
import type { Course } from '../../interface/Course';

interface Props {
  data?: Course;
}

const { data } = Astro.props;
---

<div class="flex flex-col rounded-xl ring-blue-400 max-w-60">
  <div class="flex gap-2">
    <div></div>
    <div>
      <h2>{data?.title}</h2>
      <p>{data?.duration} horas</p>
    </div>
    
  </div>
  <p>{data?.description}</p>
</div>
