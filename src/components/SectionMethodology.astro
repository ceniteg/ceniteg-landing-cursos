---
import { Users, Monitor, MapPin, Zap } from "@lucide/astro";

const methodology = [
  {
    title: "Enfoque Colaborativo",
    description: "Metodología práctica con técnicas lúdicas y casos reales",
  },
  {
    title: "Realidad Virtual",
    description: "Visores VR para experiencias inmersivas en entornos seguros",
  },
  {
    title: "Casos Reales",
    description: "Aplicación práctica con situaciones del mundo real",
  },
  {
    title: "Modalidades Flexibles",
    description: "Presencial, in-house, virtual o híbrida según necesidades",
  },
];

type Methodology = "virtual" | "prescencial" | "inhouse" | "hibrida";
const activeTab: Methodology = "prescencial";
---

{/* Methodology Section */}
<section id="metodologia" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl lg:text-4xl text-[#0a30b8] mb-4 font-semibold">
        Metodología Innovadora
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Nuestra metodología se caracteriza por su enfoque práctico y
        colaborativo, utilizando tecnología de vanguardia para un aprendizaje
        efectivo.
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12 items-center mb-16">
      <div class="space-y-8">
        <div class="flex items-start space-x-4">
          <div class="bg-[#0a30b8]/10 p-3 rounded-lg flex-shrink-0">
            <lord-icon
              src="https://cdn.lordicon.com/jdgfsfzr.json"
              trigger="loop"
              delay="2000"
              stroke="bold"
              colors="primary:#0a30b8,secondary:#0a30b8"
              style="width:48px;height:48px"
            >
            </lord-icon>
          </div>
          <div>
            <h3 class="text-xl text-[#0a30b8] mb-2 font-semibold">
              Enfoque Colaborativo
            </h3>
            <p class="text-gray-600">
              Metodología práctica con técnicas lúdicas y casos reales
            </p>
          </div>
        </div>
        <div class="flex items-start space-x-4">
          <div class="bg-[#0a30b8]/10 p-3 rounded-lg flex-shrink-0">
            <lord-icon
              src="https://cdn.lordicon.com/ogjpwrxe.json"
              trigger="loop"
              delay="2000"
              stroke="bold"
              colors="primary:#0a30b8,secondary:#0a30b8"
              style="width:48px;height:48px"
            >
            </lord-icon>
          </div>
          <div>
            <h3 class="text-xl text-[#0a30b8] mb-2 font-semibold">
              Realidad Virtual
            </h3>
            <p class="text-gray-600">
              Visores VR para experiencias inmersivas en entornos seguros
            </p>
          </div>
        </div>
        <div class="flex items-start space-x-4">
          <div class="bg-[#0a30b8]/10 p-3 rounded-lg flex-shrink-0">
            <lord-icon
              src="https://cdn.lordicon.com/rpviwvwn.json"
              trigger="loop"
              delay="2000"
              stroke="bold"
              colors="primary:#0a30b8,secondary:#0a30b8"
              style="width:48px;height:48px"
            >
            </lord-icon>
          </div>
          <div>
            <h3 class="text-xl text-[#0a30b8] mb-2 font-semibold">
              Casos Reales
            </h3>
            <p class="text-gray-600">
              Aplicación práctica con situaciones del mundo real
            </p>
          </div>
        </div>
        <div class="flex items-start space-x-4">
          <div class="bg-[#0a30b8]/10 p-3 rounded-lg flex-shrink-0">
            <lord-icon
              src="https://cdn.lordicon.com/cfoaotmk.json"
              trigger="loop"
              delay="2000"
              stroke="bold"
              colors="primary:#0a30b8,secondary:#0a30b8"
              style="width:48px;height:48px"
            >
            </lord-icon>
          </div>
          <div>
            <h3 class="text-xl text-[#0a30b8] mb-2 font-semibold">
              Modalidades Flexibles
            </h3>
            <p class="text-gray-600">
              Presencial, in-house, virtual o híbrida según necesidades
            </p>
          </div>
        </div>
      </div>
      <div class="grid grid-cols-2 gap-4">
        <img
          src="/images/vr-training-2.png"
          alt="Capacitación VR"
          width={300}
          height={200}
          class="rounded-lg object-cover w-full h-48"
        />
        <img
          src="/images/group-training.webp"
          alt="Capacitación Grupal"
          width={300}
          height={200}
          class="rounded-lg object-cover w-full h-48"
        />
        <img
          src="/images/interactive-training.webp"
          alt="Capacitación Interactiva"
          width={300}
          height={200}
          class="rounded-lg object-cover w-full h-48"
        />
        <img
          src="/images/first-aid-training.webp"
          alt="Primeros Auxilios"
          width={300}
          height={200}
          class="rounded-lg object-cover w-full h-48"
        />
      </div>
    </div>

    {/* Training Modalities */}
    <div class="bg-[#F4F4F4] rounded-2xl p-8">
      <h3 class="text-2xl text-[#0a30b8] mb-8 text-center font-semibold">
        Modalidades de Capacitación
      </h3>
      <div class="flex flex-wrap justify-center gap-4 mb-8">
        {
          [
            { id: "presencial", label: "Presencial", icon: Users },
            { id: "inhouse", label: "In-House", icon: MapPin },
            { id: "virtual", label: "Virtual", icon: Monitor },
            { id: "hibrida", label: "Híbrida", icon: Zap },
          ].map((tab) => {
            const Icon = tab.icon;
            return (
              <button
                id={tab.id}
                class={`modalidad rounded-2xl py-2 px-3 transition-all duration-500 ease-in-out transform hover:-translate-y-[5px] cursor-pointer ${tab.id === "presencial" ? "bg-[#0a30b8] text-white" : "bg-white"}`}
              >
                <div class="flex gap-2">
                  <Icon class="h-5 w-5" />
                  <p>{tab.label}</p>
                </div>
              </button>
            );
          })
        }
      </div>

      <div class="text-center">
        <div id="presencial-info" class="modalidad space-y-4">
          <img
            src="/images/classroom-training.webp"
            alt="Capacitación Presencial"
            width={600}
            height={300}
            class="rounded-lg mx-auto object-cover"
          />
          <p class="text-gray-700">
            Capacitación presencial en nuestras instalaciones con equipos
            especializados y metodología práctica.
          </p>
        </div>

        <div id="virtual-info" class="modalidad space-y-4 hidden">
          <img
            src="/images/virtual-training.webp"
            alt="Capacitación Virtual"
            width={600}
            height={300}
            class="rounded-lg mx-auto object-cover"
          />
          <p class="text-gray-700">
            Capacitación virtual interactiva con plataformas especializadas y
            seguimiento personalizado.
          </p>
        </div>

        <div id="inhouse-info" class="modalidad space-y-4 hidden">
          <img
            src="/images/vr-training-3.webp"
            alt="Capacitación In-House"
            width={600}
            height={300}
            class="rounded-lg mx-auto object-cover"
          />
          <p class="text-gray-700">
            Capacitación en las instalaciones de su empresa, adaptada a sus
            procesos específicos.
          </p>
        </div>

        <div id="hibrida-info" class="modalidad space-y-4 hidden">
          <img
            src="/images/vr-training-4.webp"
            alt="Capacitación Híbrida"
            width={600}
            height={300}
            class="rounded-lg mx-auto object-cover"
          />
          <p class="text-gray-700">
            Combinación de modalidades presencial y virtual para máxima
            flexibilidad y efectividad.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<script type="module">
  const items = [...document.querySelectorAll(".modalidad")];

  const selectModalidad = (mode) => {
    items.forEach((element) => {
      if (element.id.includes(mode)) {
        if (element.id === mode){
          element.style.color = "#fff";
          element.style.backgroundColor = "#0a30b8";
        }else{
          element.style.display = "block"
        }
        
      } else {
        if (element.id.includes("-info")) {
          element.style.display = "none"
        }else{
          element.style.color = "#0a30b8";
          element.style.backgroundColor = "#fff";
        }
      }
    });
  };

  // Añadir la función de clic a todos los botones
  items.forEach((element) => {
    const idElement = element.id;
    if (idElement.includes("-info")) return
    element.addEventListener("click", () => selectModalidad(idElement));
  });
</script>
