<header class="bg-white shadow-md">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex justify-between items-center">
    <!-- Logo -->
    <div class="flex items-center">
      <img src="/logo.svg" alt="Logo" class="h-10 w-auto" />
    </div>

    <!-- Navegación -->
    <nav class="flex items-center space-x-6">
      <a href="#cursos" class="text-gray-700 hover:text-blue-600 transition">Cursos</a>
      <a href="#metodologia" class="text-gray-700 hover:text-blue-600 transition">Metodología</a>
      <a href="#beneficios" class="text-gray-700 hover:text-blue-600 transition">Beneficios</a>
      <a href="#contacto" class="text-gray-700 hover:text-blue-600 transition">Contacto</a>
      <a
        href="#cotizacion"
        class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition"
