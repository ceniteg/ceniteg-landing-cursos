---
import { WHATSAPP_MESSAGE_URL } from "../lib/constants";
import { BASE } from "../utils/base";

---

<header class="bg-white shadow-md">
  <div
    class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex justify-between items-center"
  >
    <!-- Logo -->
    <div class="flex items-center">
      <a href="https://ceniteg.com/">
        <img src=`${BASE}images/ceniteg-marca.svg` alt="Logo" class="h-14 w-auto" />
      </a> 
    </div>

    <!-- Navegación -->
    <nav class="flex items-center space-x-6">
      <a
        href="#cursos"
        class="text-gray-700 hover:text-blue-600 transition hidden md:block"
        >Cursos</a
      >
      <a
        href="#metodologia"
        class="text-gray-700 hover:text-blue-600 transition hidden md:block"
        >Metodología</a
      >
      <a
        href="#beneficios"
        class="text-gray-700 hover:text-blue-600 transition hidden md:block"
        >Beneficios</a
      >
      <a
        href="#contacto"
        class="text-gray-700 hover:text-blue-600 transition hidden md:block"
        >Contacto</a
      >
      <a
        href={WHATSAPP_MESSAGE_URL}
        target="_blank"
        class="bg-blue-600 text-white px-4 py-2 rounded-3xl hover:bg-blue-700 transition-all duration-500 ease-in-out transform hover:-translate-y-[5px] text-center"
      >
        Solicitar cotización
      </a>
    </nav>
  </div>
</header>
