---
// Header.astro
---

<header class="bg-white shadow-md">
  <div
    class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex justify-between items-center"
  >
    <!-- Logo -->
    <div class="flex items-center">
      <img src="/images/ceniteg-marca.svg" alt="Logo" class="h-14 w-auto" />
    </div>

    <!-- Navegación -->
    <nav class="flex items-center space-x-6">
      <a
        href="#cursos"
        class="text-gray-700 hover:text-blue-600 transition hidden md:block"
        >Cursos</a
      >
      <a
        href="#metodologia"
        class="text-gray-700 hover:text-blue-600 transition hidden md:block"
        >Metodología</a
      >
      <a
        href="#beneficios"
        class="text-gray-700 hover:text-blue-600 transition hidden md:block"
        >Beneficios</a
      >
      <a
        href="#contacto"
        class="text-gray-700 hover:text-blue-600 transition hidden md:block"
        >Contacto</a
      >
      <a
        href="https://api.whatsapp.com/send?phone=51956761053&text=Hola%2C%20Deseo%20solicitar%20cotizaci%C3%B3n%20sobre%20los%20cursos%20que%20ofrecen."
        target="_blank"
        class="bg-blue-600 text-white px-4 py-2 rounded-3xl hover:bg-blue-700 transition-all duration-500 ease-in-out transform hover:-translate-y-[5px]"
      >
        Solicitar cotización
      </a>
    </nav>
  </div>
</header>
